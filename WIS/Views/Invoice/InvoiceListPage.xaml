<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="WIS.Views.InvoiceListPage"
    xmlns:behaviour="clr-namespace:WIS.Behaviors"
    xmlns:border="clr-namespace:Syncfusion.XForms.Border;assembly=Syncfusion.Core.XForms"    
    xmlns:listView="clr-namespace:Syncfusion.ListView.XForms;assembly=Syncfusion.SfListView.XForms"
    xmlns:viewModel="clr-namespace:WIS.ViewModels"
    xmlns:gradient="clr-namespace:Syncfusion.XForms.Graphics;assembly=Syncfusion.Core.XForms"
    >

    <ContentPage.BindingContext>
        <viewModel:InvoiceListPageViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <Grid>
            <gradient:SfGradientView Style="{StaticResource BlueGradientStyle}" />
            <StackLayout>
            <listView:SfListView                                        
                    AutoFitMode="Height"
                    ItemsSource="{Binding Invoices}"
                    SelectionMode="None"                
                    TapCommand="{Binding ItemSelectedCommand}">
             
                    <listView:SfListView.HeaderTemplate>
                        <DataTemplate>
                            <!--  Header  -->
                            <Label
                                Margin="0,20,0,5"
                                FontSize="20"
                                LineHeight="{OnPlatform Android=1.25,
                                                        Default=-1}"
                                Style="{StaticResource TitleLabelStyle}"
                                Text="Invoice List"
                                />
                        </DataTemplate>
                    </listView:SfListView.HeaderTemplate>

                    <listView:SfListView.ItemTemplate>
                        <DataTemplate>
                              <border:SfBorder                                    
                                    Margin="15,10,15,10"
                                    BorderColor="{DynamicResource Gray-Bg}"
                                    BorderWidth="0"
                                    CornerRadius="5"
                                    HasShadow="True"
                                    Style="{DynamicResource ThemeBorderStyle}">

                            <!--  Details of each employee  -->
                            <StackLayout Padding="0,5,0,5" Spacing="0" BackgroundColor="{DynamicResource InfoBlue}">
                               
                                <!--  Num Invoice  -->
                                <Label
                                    FontSize="14"
                                    Style="{StaticResource TitleLabelStyle}"
                                     Text="{Binding ID,StringFormat='Invoice No:{0}'}"
                                    TextColor="{DynamicResource Gray-White}" />
                                
                                <!--  Student  -->
                                <Label
                                    FontSize="14"
                                    Style="{StaticResource TitleLabelStyle}"
                                    Text="{Binding studentdisplayname}"
                                    TextColor="{DynamicResource Gray-White}" />

                                <!--  Date  -->
                                <Label
                                    HorizontalOptions="Center"
                                    HorizontalTextAlignment="Center"
                                    Style="{StaticResource SimpleLabelStyle}"
                                    Text="{Binding date,StringFormat='Issued:{0:dd MMM yyyy}'}"
                                    TextColor="White"
                                    VerticalOptions="Start"
                                    VerticalTextAlignment="Start" />

                                <!--  Due Date  -->
                                <Label
                                    HorizontalOptions="Center"
                                    HorizontalTextAlignment="Center"
                                    Style="{StaticResource SimpleLabelStyle}"
                                    Text="{Binding date_due,StringFormat='Due:{0:dd MMM yyyy}'}"
                                    TextColor="White"
                                    VerticalOptions="Start"
                                    VerticalTextAlignment="Start" />
                            </StackLayout>
                            </border:SfBorder>
                        </DataTemplate>


                    </listView:SfListView.ItemTemplate>
                                       
                </listView:SfListView>

        </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>
